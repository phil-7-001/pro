<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Demo Voting App</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f9;
      padding: 30px;
      text-align: center;
    }
    h1 {
      margin-bottom: 20px;
    }
    .candidates {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-bottom: 30px;
    }
    .candidate {
      background: white;
      padding: 20px;
      border-radius: 10px;
      width: 150px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.2);
      cursor: pointer;
      transition: 0.3s;
    }
    .candidate:hover {
      background: #dfefff;
    }
    #results {
      margin-top: 20px;
      text-align: left;
      max-width: 400px;
      margin-inline: auto;
    }
    .bar {
      height: 20px;
      background: #007bff;
      margin: 5px 0;
      border-radius: 5px;
    }
  </style>
</head>
<body>

  <h1>🗳 Demo Voting App</h1>
  <p>Select your candidate below:</p>

  <div class="candidates">
    <div class="candidate" onclick="vote('Alice')">Alice</div>
    <div class="candidate" onclick="vote('Bob')">Bob</div>
    <div class="candidate" onclick="vote('Charlie')">Charlie</div>
  </div>

  <h2 id="message"></h2>
  <div id="results"></div>

  <script>
    let votes = {
      "Alice": 0,
      "Bob": 0,
      "Charlie": 0
    };

    let hasVoted = false;

    function vote(candidate) {
      if (hasVoted) {
        document.getElementById("message").innerText = "❌ You already voted!";
        return;
      }
      votes[candidate]++;
      hasVoted = true;
      document.getElementById("message").innerText = `✅ You voted for ${candidate}`;
      showResults();
    }

    function showResults() {
      let totalVotes = Object.values(votes).reduce((a, b) => a + b, 0);
      let resultsDiv = document.getElementById("results");
      resultsDiv.innerHTML = "<h3>Results:</h3>";
      for (let candidate in votes) {
        let percentage = totalVotes ? ((votes[candidate] / totalVotes) * 100).toFixed(1) : 0;
        resultsDiv.innerHTML += `
          <p>${candidate}: ${votes[candidate]} votes (${percentage}%)</p>
          <div class="bar" style="width:${percentage}%"></div>
        `;
      }
    }
  </script>

</body>
</html>
